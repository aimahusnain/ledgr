generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model AmazonOrder {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber       String    @unique
  orderDate         DateTime
  numberOfItems     Int
  paymentMethod     String
  subtotal         Float
  additionalFee    Float
  shippingHandling Float
  taxCollected     Float
  giftCardAmount   Float
  orderTotal       Float
  refundType       String?
  refundAmount     String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model EbayOrder {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber       String    @unique
  orderDate         DateTime
  orderQuantity     Int
  itemSubtotal      Float
  shippingHandling  Float
  taxCollected      Float
  transactionFee    Float
  adFees            Float
  netAmount         Float
  payoutAmount      Float
  feeDeduction      Float
  payoutFlatFee     Float
  balance           Float
  payoutMethod     String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Payout {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  date         DateTime
  amount       Float
  method       String
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}